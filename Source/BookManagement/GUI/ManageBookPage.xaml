                        </Button.Content>
                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background" Value="#fff"/>
                                <Setter Property="Foreground" Value="#BDBDBD"/>
                                <Setter Property="Template">
